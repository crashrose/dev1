<%= semantic_form_for [@event] do |form| %>
  <%= form.inputs "Event" do %>
    <%= form.input :name %>
    <%= form.input :event_dt, :as => :datetime_picker %>
    <%= form.input :event_type %>
    <%= form.input :location %>
    <%= 
    form.input :owner 
    %>
    <%= form.input :respond_by, :as => :datetime_picker %>
  <% end %>
  <%= form.select :group_ids, Group.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
  <%= form.actions %> 
<% end %>